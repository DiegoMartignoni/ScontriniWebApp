@model ReceiptDetailViewModel
@{
    ViewData["Title"] = "Dettaglio Scontrino";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Dettaglio scontrino</h1>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="card text-left bg-light mb-4 shadow-sm">
                    <div class="card-header">
                        <span class="d-flex align-items-center">
                            <img class="p-2 p-md-1" src="~/media/@Model.TransactionMethod.ImagePath" width="30" height="30" />
                            @Model.TransactionMethod.PaymentMethod
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@Model.Price.ToString()</h5>
                        <span class="p-2 d-flex align-items-center">
                            <img class="pr-2" src="~/media/map-marker-alt-solid.svg" alt="Map Location" width="20" />
                            @Model.Location
                        </span>
                        <div class="container mb-4 text-secondary">
                            <dv class="row font-weight-bolder d-flex justify-content-end border-bottom border-secondary">EUR</dv>

                            @foreach (var item in @Model.StoreItems)
                            {
                                <div class="row d-flex justify-content-between border-bottom">
                                    <p class="p-0 mb-0 col-7 text-left">@item.Name</p>
                                    <p class="p-0 mb-0 col-5 text-right">@item.ToString()</p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <small>@Model.DateTime.Day-@Model.DateTime.Month-@Model.DateTime.Year</small>
                        <small>@Model.DateTime.Hour:@Model.DateTime.Minute</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-6">
                <div class="container">
                    <div class="row">
                        <div class="col-auto col-lg-6 card bg-light p-0 mb-4 shadow-sm">
                            <div class="row no-gutters">
                                <div class="col-4 d-flex align-items-center">
                                    <img src="~/media/@Model.ReceiptTemplate.ImagePath" class="card-img rounded-left" alt="...">
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <div class="card-body p-2">
                                        <h5 class="card-title m-0">Template Scontrino</h5>
                                        <p class="card-text"><small>@Model.ReceiptTemplate.Name</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 card mb-4 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Originale</h5>
                                <p class="card-text">Carica l'immagine originale dello scontrino. Assicurati che disponga della giusta qualità.</p>
                                <a href="#" class="btn btn-primary mb-3">Upload</a>
                                <a href="#" class="btn btn-primary mb-3">Download</a>
                                @if (!String.IsNullOrEmpty(Model.OrigImagePath))
                                {
                                    <img src="~/media/@Model.OrigImagePath" class="img-fluid img-thumbnail mb-2" alt="Alternate Text" />
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 card mb-4 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Bianco e nero</h5>
                                <p class="card-text">Carica l'immagine originale dello scontrino. Assicurati che disponga della giusta qualità.</p>
                                <a href="#" class="btn btn-primary mb-3">Upload</a>
                                <a href="#" class="btn btn-primary mb-3">Download</a>
                                @if (!String.IsNullOrEmpty(Model.ElabImagePath))
                                {
                                    <img src="~/media/@Model.ElabImagePath" class="img-fluid img-thumbnail mb-2" alt="Alternate Text" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
